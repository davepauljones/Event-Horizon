<UserControl x:Class="The_Oracle.EventHorizonLogo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:The_Oracle"
             mc:Ignorable="d" x:Name="EventHorizonlogoUserControl"
             d:DesignHeight="100" d:DesignWidth="250">
    <Grid RenderOptions.BitmapScalingMode="NearestNeighbor" SnapsToDevicePixels="True" TextOptions.TextRenderingMode="Grayscale" RenderOptions.ClearTypeHint="Enabled">
        <StackPanel Orientation="Vertical">
            <Image Source="pack://application:,,/EventHorizonLogoNewSmall.png" Stretch="UniformToFill" Width="189" Height="34"/>
            <Label Content="By David Paul Jones GPLv3 2023" FontSize="10" HorizontalAlignment="Center" Margin="0,10,0,0"/>
            <TextBlock TextAlignment="Center" Margin="0,10,0,0">           
                <Hyperlink NavigateUri="https://www.patreon.com/davepauljones" RequestNavigate="Hyperlink_RequestNavigate">
                    buy me a coffee on Patreon
                </Hyperlink>
            </TextBlock>

        </StackPanel>
    </Grid>
</UserControl>
