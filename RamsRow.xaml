<UserControl x:Class="Event_Horizon.RamsRow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Event_Horizon"
             xmlns:fa="clr-namespace:FontAwesome.WPF;assembly=FontAwesome.WPF"
             mc:Ignorable="d"
             d:DesignHeight="103" d:DesignWidth="1314" MinWidth="1314" MaxWidth="1314">
    <Grid x:Name="BackgroundGrid" Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="44" MaxWidth="44"/>
            <ColumnDefinition Width="Auto" MinWidth="100" MaxWidth="100"/>
            <ColumnDefinition Width="Auto" MinWidth="60" MaxWidth="60"/>
            <ColumnDefinition Width="Auto" MinWidth="336" MaxWidth="336"/>
            <ColumnDefinition Width="Auto" MinWidth="38" MaxWidth="38"/>
            <ColumnDefinition Width="Auto" MinWidth="236" MaxWidth="236"/>
            <ColumnDefinition Width="Auto" MinWidth="38" MaxWidth="38"/>
            <ColumnDefinition Width="Auto" MinWidth="150" MaxWidth="150"/>
            <ColumnDefinition Width="Auto" MinWidth="339" MaxWidth="339"/>
            <ColumnDefinition Width="Auto" MinWidth="38" MaxWidth="38"/>
            <ColumnDefinition Width="Auto" MinWidth="138" MaxWidth="138"/>
            <ColumnDefinition Width="Auto" MinWidth="110" MaxWidth="110"/>
            <ColumnDefinition Width="Auto" MinWidth="122" MaxWidth="122"/>
            <ColumnDefinition Width="Auto" MinWidth="60" MaxWidth="60"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="14" x:Name="HeaderGrid" Width="1280" Height="29" Margin="0,4,0,2" MaxWidth="1280" HorizontalAlignment="Left" IsEnabled="False" Visibility="Visible">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" MinWidth="44" MaxWidth="44"/>
                <ColumnDefinition Width="Auto" MinWidth="100" MaxWidth="100"/>
                <ColumnDefinition Width="Auto" MinWidth="60" MaxWidth="60"/>
                <ColumnDefinition Width="Auto" MinWidth="336" MaxWidth="336"/>
                <ColumnDefinition Width="Auto" MinWidth="38" MaxWidth="38"/>
                <ColumnDefinition Width="Auto" MinWidth="236" MaxWidth="236"/>
                <ColumnDefinition Width="Auto" MinWidth="38" MaxWidth="38"/>
                <ColumnDefinition Width="Auto" MinWidth="150" MaxWidth="150"/>
                <ColumnDefinition Width="Auto" MinWidth="339" MaxWidth="339"/>
                <ColumnDefinition Width="Auto" MinWidth="38" MaxWidth="38"/>
                <ColumnDefinition Width="Auto" MinWidth="138" MaxWidth="138"/>
                <ColumnDefinition Width="Auto" MinWidth="110" MaxWidth="110"/>
                <ColumnDefinition Width="Auto" MinWidth="122" MaxWidth="122"/>
                <ColumnDefinition Width="Auto" MinWidth="60" MaxWidth="60"/>
            </Grid.ColumnDefinitions>
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1" Opacity="0.3">

                    <GradientStop Color="Blue" Offset="0.1" />

                    <GradientStop Color="Orange" Offset="0.25" />

                    <GradientStop Color="Yellow" Offset="0.50" />

                    <GradientStop Color="Green" Offset="0.75" />

                    <GradientStop Color="Red" Offset="1.0" />

                </LinearGradientBrush>
            </Grid.Background>
            <Label Grid.Column="0" Content="Ref." Style="{StaticResource LabelStyle }" Margin="4,0,0,0" Foreground="Black"/>
            <Label Grid.Column="1" Content="Created" Style="{StaticResource LabelStyle }" Margin="4,0,0,0" Foreground="Black"/>
            <Label Grid.Column="2" Content="Job No." Style="{StaticResource LabelStyle }" Margin="4,0,0,0" Foreground="Black"/>
            <Label Grid.Column="3" Content="Description" Style="{StaticResource LabelStyle }" Margin="6,0,0,0" Foreground="Black"/>
            <Label Grid.Column="4" Grid.ColumnSpan="2" Content="Profile Type" Style="{StaticResource LabelStyle }" Margin="6,0,0,0" Foreground="Black"/>
            <Label Grid.Column="6" Grid.ColumnSpan="2" Content="Origin" Style="{StaticResource LabelStyle }" Margin="-2,0,0,0" Foreground="Black"/>
            <Label Grid.Column="7" Content="Client Name" Style="{StaticResource LabelStyle }" Margin="6,0,0,0" Foreground="Black"/>
        </Grid>

        <Grid Grid.Column="0" Grid.Row="1" Background="#f7f8f9" Height="18" VerticalAlignment="Top" Margin="0,5,5,0">
            <Grid.Effect>
                <DropShadowEffect Color="Black" Direction="320" ShadowDepth="1" Opacity="0.2" />
            </Grid.Effect>
            <TextBlock x:Name="RamsIDTextBlock" Text="00000" Foreground="Black" FontSize="13" Margin="2,0,2,0" Padding="0" TextAlignment="Right" VerticalAlignment="Top"/>
        </Grid>

        <TextBlock Grid.Column="1" Grid.Row="1" x:Name="CreatedDateTimeTextBlock" Text="04/08/23 16:35" Foreground="Black" FontSize="13" Margin="0,5,10,0"/>
        <TextBlock Grid.Column="2" Grid.Row="1" x:Name="JobNoTextBlock" Text="24589" Foreground="Black" FontSize="13" Margin="10,0,5,0" Width="70" Height="18" MaxWidth="70" HorizontalAlignment="Left" TextWrapping="NoWrap"/>
        <TextBlock Grid.Column="3" Grid.Row="1" x:Name="DescriptionTextBlock" Text="Mary had a little lamb Mary had a little lambMary had a lMary had a little lambMary had a l" Foreground="Black" FontSize="13" Margin="10,0,5,0" Width="320" Height="18" MaxWidth="320" HorizontalAlignment="Left" TextWrapping="NoWrap"/>

        <Border x:Name="RamsProfileTypeFontAwesomeIconBorder" Grid.Column="4" Grid.Row="1" Style="{DynamicResource EventTypeToken_BorderStyle}">
            <fa:FontAwesome x:Name="RamsProfileTypeFontAwesomeIcon" Icon="User" Style="{DynamicResource EventTypeToken_FontAwesomeStyle}"/>
        </Border>

        <TextBlock x:Name="RamsProfileTypeTextBlock" Grid.Column="5" Grid.Row="1" Text="Profile Type" Style="{DynamicResource EventTypeText_TextBlockStyle}"/>

        <Grid x:Name="UserTokenGrid" Grid.Column="6" Grid.Row="1" Style="{DynamicResource EllipseToken_GridStyle}">
            <Ellipse x:Name="UserEllipse" Style="{DynamicResource EllipseToken_EllipseStyle}"/>
            <Label x:Name="UserLabel" Content="TM" Style="{DynamicResource EllipseToken_LabelStyle}"/>
        </Grid>

        <TextBlock x:Name="ClientNameTextBlock" Grid.Column="7" Grid.Row="1" Text="Clients Name" Margin="10,0,5,0" Style="{DynamicResource EventTypeText_TextBlockStyle}"/>
    </Grid>
</UserControl>