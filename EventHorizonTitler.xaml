<Window x:Class="Event_Horizon.EventHorizonTitler"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Event_Horizon"
        mc:Ignorable="d"
        Title="EventHorizonTitler"
        WindowStyle="SingleBorderWindow"
        WindowState="Maximized"
        Background="White"
        KeyDown="Window_KeyDown">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*" MaxHeight="900"/>
            <RowDefinition Height="1*" MinHeight="50"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="40,40,0,0" Width="1400" Height="900" Background="#FFF1F1F1">
            <TextBlock x:Name="TitleText" FontSize="56" FontWeight="SemiBold" Foreground="Black" TextAlignment="Center" Margin="0,0,0,40"/>
            <TextBlock x:Name="BodyText" FontSize="32" Foreground="Black" TextWrapping="Wrap" TextAlignment="Left"/>
            <StackPanel x:Name="OptionsPanel" Margin="0,20,0,0" Visibility="Collapsed"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Margin="0,10,0,0">
            <Button x:Name="NextButton" Content="NEXT" Width="150" Height="50" IsEnabled="False" Click="NextButton_Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
