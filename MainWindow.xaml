                                        <Label Content="Details" MinWidth="338" Style="{StaticResource LabelStyle }"/>
                                        <Label Content="Source" MinWidth="196" Style="{StaticResource LabelStyle }"/>
                                        <Label Content="Frequency" MinWidth="122" Style="{StaticResource LabelStyle }"/>
                                        <Label Content="Status" MinWidth="69" Style="{StaticResource LabelStyle }"/>
                                        <Label Content="Notes" MinWidth="24" Style="{StaticResource LabelStyle }"/>
