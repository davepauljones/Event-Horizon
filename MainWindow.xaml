                        <LinearGradientBrush StartPoint="0,1" EndPoint="0,0">
                            <GradientStop Color="DodgerBlue" Offset="0.8" />
                            <GradientStop Color="Transparent" Offset="0.40" />
                        </LinearGradientBrush>
                    </Rectangle.Fill>
                </Rectangle>

                <Rectangle Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="5" Grid.RowSpan="4" Opacity="1" Width="{Binding ActualWidth, ElementName=MainWindowWindow}" Height="330" HorizontalAlignment="Left" VerticalAlignment="Bottom">
