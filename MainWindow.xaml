                                                <Separator />
                                                <MenuItem Header="Delete" Tag="3" Click="RightMouseButton_Click"/>
                                                <Separator />
                                                <MenuItem Header="Help" Tag="4" Click="RightMouseButton_Click"/>
                                            </ContextMenu>
                                        </ListView.ContextMenu>
                                    </ListView>
                                </StackPanel>
                            </ScrollViewer>
                        </Border>
                    </StackPanel>
                </Grid>
                <Grid x:Name="StatusGrid" Grid.Row="4" Grid.Column="2" Margin="0,0,0,10">
