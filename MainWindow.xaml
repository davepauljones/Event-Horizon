                        <LinearGradientBrush StartPoint="0,1" EndPoint="1,1">
                            <GradientStop Color="Transparent" Offset="0.10" />
                            <GradientStop Color="DodgerBlue" Offset="0.70" />
                        </LinearGradientBrush>
                    </Rectangle.Fill>
                </Rectangle>

                <Rectangle Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="5" Grid.RowSpan="3" Opacity="0.56" Width="{Binding ActualWidth, ElementName=MainWindowWindow}" Height="600" HorizontalAlignment="Left" VerticalAlignment="Top" >
